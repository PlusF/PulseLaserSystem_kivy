<MainWindow>:
#左上
    BoxLayout:
        id: MorA
        orientation: "vertical"
        pos: root.x, root.top - self.height
        size:root.width/2, root.height/2
        BoxLayout:
            orientation: "horizontal"
            id: auto_emit
            Label:
                id: label_auto_emit_on
                text: "Auto" 
                color:1,1,1,1
            Switch:
                id: switch_auto_emit
                size: 
        BoxLayout:
            orientation: "horizontal"
            id: manual_emit
            Label:
                id: label_manual_emit_on
                text: 
                    "Laser" 
                color:1,1,1,1
            Switch:
                id: switch_manual_emit
                size: 
#右上
    FloatLayout:
        id: consition
        pos: root.width-self.width, root.top - self.height
        size:root.width/2, root.height/2

#左下    
    FloatLayout:
        #id: 
        pos: root.x, root.y
        size:root.width/2, root.height/2
#右下
    FloatLayout:
        id: move
        pos: root.width-self.width, root.y
        size:root.width/2, root.height/2
        AnchorLayout:
            pos: self.parent.pos
            size:self.parent.size
            anchor_x:"right"
            anchor_y:"center"
            MoveButton:
                id: button_right
                on_press:
                    root.move_right()
                on_release:
                MoveImage:
                    id: img_right
                    source: "source/right.png"

        AnchorLayout:
            pos: self.parent.pos
            size:self.parent.size
            anchor_x:"left"
            anchor_y:"center"
            MoveButton:
                id: button_left
                on_press:
                    root.move_left()
                on_release:
                MoveImage:
                    id: img_left
                    source: "source/left.png"
    
