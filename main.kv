#:kivy 1.0.9
<MoveButton@Button>:
    size_hint:0.3,0.25
    background_color: (166/255,166/255,166/255,1)   

<MoveImage@Image>:
    center_x: self.parent.center_x
    center_y: self.parent.center_y
    
<LaserLabel@Label>:
    color:1,1,1,1
    font_size:30
<left_top@FloatLayout>:
    x:root.x
    top:root.top
    size:root.width/2, root.height/2

